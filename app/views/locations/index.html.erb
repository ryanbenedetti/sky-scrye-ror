<h1>Locations</h1>
<%= form_tag locations_path, :method => :get do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search Near", :name => nil %>
  </p>
<% end %>

<ul>
<% @locations.each do |location| %>
  <li>Location: <%= location.name%>,  Address: <%= location.address%> </li>
<% end %>
</ul>
